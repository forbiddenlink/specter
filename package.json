{
  "name": "specter-mcp",
  "version": "1.0.0",
  "description": "Give your codebase a voice. A Copilot CLI plugin that builds a knowledge graph and lets you talk to your code.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "specter": "dist/cli.js",
    "specter-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/dashboard/static dist/dashboard/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "scan": "node dist/cli.js scan",
    "dashboard": "node dist/cli.js dashboard",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "docs": "typedoc"
  },
  "keywords": [
    "copilot",
    "mcp",
    "codebase",
    "knowledge-graph",
    "ast",
    "code-analysis",
    "github-copilot-cli"
  ],
  "author": "Liz Stein",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/forbiddenlink/specter"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/static": "^7.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fastify": "^4.26.0",
    "ora": "^8.0.1",
    "simple-git": "^3.22.0",
    "ts-morph": "^22.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.3.0",
    "typedoc": "^0.27.0",
    "vitest": "^4.0.18"
  }
}
