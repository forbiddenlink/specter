{
  "name": "@purplegumdropz/specter",
  "version": "1.0.0",
  "description": "Give your codebase a voice. A Copilot CLI plugin that builds a knowledge graph and lets you talk to your code.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "specter": "dist/cli.js",
    "specter-mcp": "dist/index.js"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "action.yml",
    "scripts/"
  ],
  "scripts": {
    "build": "tsc && cp -r src/dashboard/static dist/dashboard/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "scan": "node dist/cli.js scan",
    "dashboard": "node dist/cli.js dashboard",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "docs": "typedoc",
    "prepare": "husky"
  },
  "keywords": [
    "copilot",
    "mcp",
    "codebase",
    "knowledge-graph",
    "ast",
    "code-analysis",
    "github-copilot-cli"
  ],
  "author": "Liz Stein",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/forbiddenlink/specter"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@fastify/static": "^9.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@octokit/rest": "^22.0.1",
    "@types/qrcode": "^1.5.6",
    "canvas": "^3.2.1",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "fast-glob": "^3.3.3",
    "fastify": "^5.7.0",
    "ora": "^9.0.0",
    "qrcode": "^1.5.4",
    "simple-git": "^3.22.0",
    "ts-morph": "^27.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/node": "^20.19.33",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typedoc": "^0.28.0",
    "typescript": "^5.9.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "*.{json,md}": [
      "biome format --write"
    ]
  }
}
