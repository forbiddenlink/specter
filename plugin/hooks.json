{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$PLUGIN_DIR/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ["Edit", "Write"],
        "hooks": [
          {
            "type": "command",
            "command": "$PLUGIN_DIR/hooks/file-risk-warning.sh"
          }
        ]
      }
    ]
  }
}
